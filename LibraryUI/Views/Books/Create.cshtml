@model LibraryProjectSep2019.Book

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookName" class="control-label"></label>
                <input asp-for="BookName" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsbnNumber" class="control-label"></label>
                <input asp-for="IsbnNumber" class="form-control" />
                <span asp-validation-for="IsbnNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BooksCategory" class="control-label"></label>
                <select asp-for="BooksCategory" class="form-control" asp-items="Html.GetEnumSelectList<TypeOfBooks>()"></select>
                <span asp-validation-for="BooksCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplacementPrice" class="control-label"></label>
                <input asp-for="ReplacementPrice" class="form-control" />
                <span asp-validation-for="ReplacementPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
